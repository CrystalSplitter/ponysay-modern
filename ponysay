#!/usr/bin/env bash
export PERL_UNICODE=S
ponydir=/usr/share/ponies

function ponyf() {
    if [[ -f ${ponydir}/${1}.cow ]] ; then
        cowsay -f "${ponydir}/${1}.cow" $@
    else
        ponyr $@
    fi
}
function ponyr() {
    cowsay -f $(ls ${ponydir}/*.cow | sort -R | head -n1) $@
}

while getopts f:hv OPT
do
    case ${OPT} in
	v)  echo "v0.01" ; exit;;
	h)  echo "helpherpderp" ; exit;;
	f)  ponyf $* ; exit;;
	\?) echo "DERP"; exit;;
	*)  ponyr $* ; exit;;
    esac
done
ponyr $*
